<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/color_white_style_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_meetingroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1101"
            android:textColor="#323232"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_meetingroom_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="idle"
            android:textColor="#888888"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_meetingroom_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/string_format_meetingroom_time"
        android:layout_gravity="bottom"
        android:textColor="#888888"
        android:textSize="13sp" />
</LinearLayout>