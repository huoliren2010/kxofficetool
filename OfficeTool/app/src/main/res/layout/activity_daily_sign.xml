<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daily_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kx.officetool.DailySignActivity">

    <RelativeLayout
        android:id="@+id/main_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/top_bar_normal_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/tv_daily_sign_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_back"
                android:text="@string/string_sign_list"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_title_bar"
            android:layout_marginTop="12dp"
            android:divider="@color/color_maincolor_bg"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_circle_add"
            android:elevation="8dp"
            android:text="@string/string_sign"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewroot_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
